@{
  Layout = "_Layout";
}

@model Registrar.Models.Course

<h2>Edit </h2>

<h2> Edit Courses: @Html.DisplayFor(model => model.CourseName)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.LabelFor(model => model.CourseName)
  @Html.EditorFor(model => model.CourseName)

  @Html.LabelFor(model => model.CourseNumber)
  @Html.EditorFor(model => model.CourseNumber)

  <input type="submit" value="Save" />
}
