@{
  Layout = "_Layout";
}

@model Registrar.Models.Course

<h2>Course Details</h2>
<hr/>
<h2>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h2>
<h2>@Html.DisplayNameFor(model => model.CourseNumber): @Html.DisplayFor(model => model.CourseNumber)</h2>


<ul>
@if (@Model.Students.Count == 0)
{
  <p>no students found</p>
}
else
{
  <h2>Students enrolled in this course:</h2>
  <ul>
  @foreach(var join in Model.Students)
  {
    <li>@join.Student.StudentName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to courses", "Index")</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId})</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>